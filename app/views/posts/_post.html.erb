<div class="card-list-containar">
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_path(post.id) do %>
        <div class="place">
          <h5><i class="far fa-flag"></i><%= post.title %></h5>
        </div>
    <% end %>
    <div class="col-md-12 text-left">
      <%= link_to user_path(post.user) do %>
        <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: "50x50", class:"mt-3 rounded-circle"; %>
        <div class="user_name"><%= post.user.name %></div>
      <% end %>
    </div>
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-md-12">
          <td>
            <%= render "favorites/favo", post: post %>
          <%= link_to post_path(post.id) do %>
            <i class="fas fa-comment"></i>
          <% end %>
          <%= post.post_comments.count %>件のコメント
          <span><i class="fab fa-algolia"></i><%= post.created_at.in_time_zone('Tokyo') %></span>
          </td>
        </div>
        <div class="col-md-12"><br>
          <p class="card-text"><%= post.body %></p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
