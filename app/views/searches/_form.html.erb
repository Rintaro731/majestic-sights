<% if user_signed_in? %>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, class: "keyword", placeholder: "キーワードを入力", value: @keyword, size: 30; %>
      <%= f.submit "Search", class: "btn btn btn-outline-light btn-sm " %>
    <% end %>
<% end %>