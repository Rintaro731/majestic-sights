        <% if @keyword.present? %>
          <h2 style="color: white; margin-top: 50px;">〘 <%= @keyword %> Search Results 〙</h2><br>
        <% elsif %>
          <h2 style="color: white; margin-top: 50px;">〘 Search Results All 〙</h2><br>
        <% else %>
          <h2 style="color: white; margin-top: 50px;">〘 <%= @keyword %>"の投稿がありません｡ 〙</h2><br>
        <% end %>
      </div>
    </div>
    <% if @posts.present? %>
      <%= render "posts/post" %>
    <% else %>
    <% end %>
  </div><br>
</div>