<div class="img">
  <div class='container'><br>
    <div class="row">
      <div class="col-md-12 text-center">
        <h1 style="color: white;">-User page-</h1><br>
      </div>
    </div>

    <div class='row'>
      <div class='col-md-6 text-right'><br>
        <tr>
          <%= attachment_image_tag @user, :profile_image, :fill, 190, 190, format: 'jpeg', fallback: "no_image.jpg", size: "190x190" %>
        </tr>
        <div class="col-md-12">
          <div class="col-md-12"><br>
            <tr>
              <% if current_user.following?(@user) %>
                <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-info" %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
              <% end %>
            </tr>
          </div>
        </div>
      </div>
      <div class="col-md-4 text-center"><br>
        <table class='table table-bordered'>
          <tr>
      	    <th class="table-dark" style="color: white;">ユーザー名</th>
      	    <th style="color: white;"><%= @user.name %></th>
          </tr>
          <tr>
    	      <th class="table-dark" style="color: white;">自己紹介</th>
    	      <th style="color: white;"><%= @user.introduction %></th>
          </tr>
          <tr>
            <th class="table-dark" style="color: white;">フォロー中</th>
            <th><%= link_to @user.followings.count, follows_user_path(@user) %></th>
          </tr>
          <tr>
            <th class="table-dark" style="color: white;">フォロワー</th>
            <th><%= link_to @user.followers.count, followers_user_path(@user) %></th>
          </tr>
        </table>
        <div style="margin-bottom: 100%">
          <%= link_to edit_user_path(@user), class: "btn btn-info btn-block", method: :get do %>
           <i class="fas fa-cog"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>